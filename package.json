{
  "name": "gitify",
  "version": "0.0.19",
  "description": "GitHub Notifications on your menu bar.",
  "main": "main.js",
  "scripts": {
    "build-js": "webpack",
    "build": "ulimit -n 512 && npm install && grunt build && npm run build-js",
    "watch-js": "webpack --progress --colors --watch",
    "watch": "npm run build && grunt build && npm run watch-js & grunt watch",
    "start": "electron . --enable-logging",
    "release-js": "webpack --config webpack.rel.config.js",
    "package": "electron-packager . Gitify --overwrite --platform=darwin --arch=x64 --version=0.35.4 --asar=true --icon=images/app-icon.icns --prune --ignore='src' --ignore='coverage'",
    "codesign": "bash scripts/codesign.bash",
    "dist": "npm run release-js && npm run package && npm run codesign",
    "lint": "eslint 'src/js/' 'src/js/app.js' 'main.js'",
    "test": "npm run lint && jest --config=jest-config.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ekonstantinidis/gitify.git"
  },
  "keywords": [
    "github",
    "notifier",
    "notifications",
    "native",
    "app"
  ],
  "author": "Emmanouil Konstantinidis",
  "contributors": [
    {
      "name": "Emmanouil Konstantinidis",
      "url": "https://githib.com/ekonstantinidis"
    },
    {
      "name": "Jake 'Sid' Smith",
      "url": "https://githib.com/JakeSidSmith"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ekonstantinidis/gitify/issues"
  },
  "homepage": "https://github.com/ekonstantinidis/gitify",
  "dependencies": {
    "auto-launch": "=1.0.1",
    "bootstrap": "=3.3.6",
    "electron-gh-releases": "=2.0.2",
    "electron-positioner": "=2.0.2",
    "font-awesome": "=4.5.0",
    "history": "=1.14.0",
    "octicons": "=3.3.0",
    "react": "=0.14.5",
    "react-addons-test-utils": "=0.14.5",
    "react-dom": "=0.14.5",
    "react-router": "=1.0.1",
    "react-toggle": "=2.0.1",
    "reflux": "=0.3.0",
    "reloading": "0.0.6",
    "superagent": "=1.5.0",
    "underscore": "=1.8.3"
  },
  "devDependencies": {
    "babel-core": "=6.3.26",
    "babel-eslint": "=4.1.6",
    "babel-jest": "=6.0.1",
    "babel-loader": "=6.2.1",
    "babel-preset-es2015": "=6.3.13",
    "babel-preset-react": "=6.3.13",
    "electron-debug": "=0.5.1",
    "electron-packager": "=5.1.1",
    "electron-prebuilt": "=0.35.4",
    "eslint": "=1.10.3",
    "eslint-plugin-react": "=3.14.0",
    "grunt": "=0.4.5",
    "grunt-contrib-clean": "=0.7.0",
    "grunt-contrib-copy": "=0.8.2",
    "grunt-contrib-less": "=1.1.0",
    "grunt-contrib-watch": "=0.6.1",
    "jest-cli": "=0.8.0",
    "json-loader": "^0.5.4",
    "less": "=2.5.3",
    "webpack": "=1.12.10"
  }
}
